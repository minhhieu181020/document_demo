<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lifecardsdk_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lifecardsdk_default_toolbar_height"
        android:background="@color/lifecardsdk_white"
        android:elevation="@dimen/lifecardsdk_dp_4">

        <ImageView
            android:id="@+id/imgBack"
            style="@style/LifeCardSDK_IconToolbar"
            android:layout_centerVertical="true"
            android:src="@drawable/lifecardsdk_ic_back_black" />

        <TextView
            style="@style/LifeCardSDK_HeaderTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Instruction_to_receive_gifts"
            android:textSize="@dimen/lifecardsdk_sp_18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lifecardsdk_white"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:layout_marginTop="@dimen/lifecardsdk_dp_16"
            android:id="@+id/TVtemplatePromotion"
            style="@style/LifeCardSDK_HeaderText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10_sdp"
            android:layout_marginRight="@dimen/_10_sdp"
            android:textSize="@dimen/lifecardsdk_sp_16" />


    </LinearLayout>

</LinearLayout>
