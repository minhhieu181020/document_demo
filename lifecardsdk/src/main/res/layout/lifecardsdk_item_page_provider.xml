<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lifecardsdk_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lifecardsdk_dp_60"
            android:layout_margin="@dimen/lifecardsdk_dp_1"
            app:cardCornerRadius="@dimen/lifecardsdk_dp_8">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/lifecardsdk_dp_60"
                android:layout_height="@dimen/lifecardsdk_dp_60" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lifecardsdk_dp_12"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvProviderName"
                android:textSize="@dimen/lifecardsdk_sp_16"
                style="@style/LifeCardSDK_HeaderTextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/lifecardsdk_dp_6"
                android:id="@+id/tvAddress"
                style="@style/LifeCardSDK_NormalText_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/llPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lifecardsdk_dp_12"
        android:orientation="horizontal">

        <TextView
            style="@style/LifeCardSDK_NormalText_Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lifecardsdk_buy_card_phone_number" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            style="@style/LifeCardSDK_NormalText_Orange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lifecardsdk_dp_12"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lifecardsdk_dp_12"
        android:orientation="horizontal">

        <TextView
            style="@style/LifeCardSDK_NormalText_Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lifecardsdk_buy_card_email" />

        <TextView
            android:id="@+id/tvEmail"
            style="@style/LifeCardSDK_NormalText_Orange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lifecardsdk_dp_12"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>


</LinearLayout>