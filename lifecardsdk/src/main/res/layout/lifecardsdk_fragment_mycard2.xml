            <ImageView
                android:id="@+id/imgBuy"
                android:layout_width="@dimen/lifecardsdk_dp_190"
                android:layout_height="@dimen/lifecardsdk_dp_198"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@mipmap/lifecard_icon_the_da_nang" />

            <TextView
                android:id="@+id/tvBuycard"
                style="@style/LifeCardSDK_HeaderTextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBuy"
                android:gravity="center"
                android:text="@string/lifecardsdk_Buy_prepaid_card"
                android:textSize="@dimen/lifecardsdk_dp_20"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/llcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBuycard"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/lifecardsdk_dp_12"
                    android:layout_marginTop="@dimen/lifecardsdk_dp_8"
                    android:layout_marginRight="@dimen/lifecardsdk_dp_12"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        style="@style/LifeCardSDK_Card_Wait_IMG"
                        android:src="@drawable/lifecardsdk_ic_icon_check_1" />

                    <TextView
                        style="@style/LifeCardSDK_Card_Wait_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lifecardsdk_list_card_content1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/lifecardsdk_dp_12"
                    android:layout_marginTop="@dimen/lifecardsdk_dp_8"
                    android:layout_marginRight="@dimen/lifecardsdk_dp_12"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        style="@style/LifeCardSDK_Card_Wait_IMG"
