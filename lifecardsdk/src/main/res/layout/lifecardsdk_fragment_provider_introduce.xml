<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/nsvContainer"

    android:scrollbars="none"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lifecardsdk_dp_8"
        android:layout_marginRight="@dimen/lifecardsdk_dp_8"
        android:layout_marginBottom="@dimen/lifecardsdk_dp_16"
        android:layout_marginTop="@dimen/lifecardsdk_dp_15"
        app:cardCornerRadius="@dimen/lifecardsdk_dp_8"
        app:cardElevation="@dimen/lifecardsdk_dp_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/lifecardsdk_dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/lifecardsdk_dp_16"
                    android:layout_height="@dimen/lifecardsdk_dp_16"
                    android:layout_marginRight="@dimen/lifecardsdk_dp_8"
                    android:src="@mipmap/lifecardsdk_ic_mail" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/LifeCardSDK_NormalText_Orange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lifecardsdk_dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/lifecardsdk_dp_16"
                    android:layout_height="@dimen/lifecardsdk_dp_16"
                    android:layout_marginRight="@dimen/lifecardsdk_dp_8"
                    android:src="@mipmap/lifecarsdk_ic_internet" />

                <TextView
                    style="@style/LifeCardSDK_NormalText_Orange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:id="@+id/tvWebsite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lifecardsdk_dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/lifecardsdk_dp_16"
                    android:layout_height="@dimen/lifecardsdk_dp_16"
                    android:layout_marginRight="@dimen/lifecardsdk_dp_8"
                    android:src="@mipmap/lifecarsdk_ic_fb" />

                <TextView
                    style="@style/LifeCardSDK_NormalText_Orange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tvFacebook" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llIntroduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lifecardsdk_dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/lifecardsdk_dp_16"
                    android:layout_height="@dimen/lifecardsdk_dp_16"
                    android:layout_marginRight="@dimen/lifecardsdk_dp_8"
                    android:src="@mipmap/lifecarsdk_ic_info" />

                <TextView
                    style="@style/LifeCardSDK_NormalText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lifecardsdk_introduce_information" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/lifecardsdk_dp_8"
                android:layout_width="match_parent"
                style="@style/LifeCardSDK_NormalText"
                android:id="@+id/tvIntroduction"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>