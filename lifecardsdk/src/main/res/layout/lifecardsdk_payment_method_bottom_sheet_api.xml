<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/lifecardsdk_dp_16"
        android:paddingRight="@dimen/lifecardsdk_dp_16">

        <View
            android:layout_width="@dimen/lifecardsdk_dp_60"
            android:layout_height="@dimen/lifecardsdk_dp_4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/lifecardsdk_dp_12"
            android:background="@drawable/lifecardsdk_bg_round_gray" />

        <TextView
            style="@style/LifeCardSDK_HeaderTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/lifecardsdk_dp_18"
            android:text="@string/lifecardsdk_buycard_card_select_payment_method" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lifecardsdk_dp_16"
            android:layout_marginBottom="@dimen/lifecardsdk_dp_16" />

        <Button
            android:id="@+id/btnContinue"
            style="@style/LifeCardSDK_NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lifecardsdk_dp_16"
            android:background="@drawable/lifecardsdk_bg_round_orange2"
            android:text="@string/lifecardsdk_continue"
            android:textAllCaps="false"
            android:textColor="@color/lifecardsdk_white" />
    </LinearLayout>
</RelativeLayout>