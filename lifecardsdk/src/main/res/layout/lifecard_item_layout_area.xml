<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/LifeCardSDK_SquareMenuItem"
    android:paddingLeft="@dimen/lifecardsdk_dp_16"
    android:paddingRight="@dimen/lifecardsdk_dp_16">

    <include layout="@layout/lifecardsdk_border_vertical_gray" />

    <TextView
        android:layout_toLeftOf="@id/imgChecked"
        android:layout_below="@+id/viewVertical"
        style="@style/LifeCardSDK_NormalText"
        android:id="@+id/tvAreaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/lifecardsdk_dp_14"
        android:paddingBottom="@dimen/lifecardsdk_dp_14" />
    <ImageView
        android:visibility="gone"
        android:layout_marginLeft="@dimen/lifecardsdk_dp_16"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imgChecked"
        android:tint="@color/lifecardsdk_green"
        android:src="@drawable/lifecardsdk_ic_check_circle_black_24dp"
        android:layout_width="@dimen/lifecardsdk_dp_24"
        android:layout_height="@dimen/lifecardsdk_dp_24"/>
</RelativeLayout>