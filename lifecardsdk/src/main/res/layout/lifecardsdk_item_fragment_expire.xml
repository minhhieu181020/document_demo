<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LlBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lifecardsdk_dp_10"
        android:layout_marginTop="@dimen/lifecardsdk_dp_10"
        android:layout_marginRight="@dimen/lifecardsdk_dp_10"
        android:background="@drawable/lifecardsdk_blue_dark"
        android:orientation="vertical"
        android:padding="@dimen/lifecardsdk_dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/lifecardsdk_dp_60"
                android:layout_height="@dimen/lifecardsdk_dp_60"
                android:src="@drawable/lifecardsdk_ic_center_focus_strong_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNumberCard"
            style="@style/LifeCardSDK_HeaderText_sp24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lifecardsdk_dp_12"
            android:text="9704 3330 3399 1142" />

        <TextView
            android:id="@+id/tvNameCards"
            style="@style/LifeCardSDK_HeaderText_sp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lifecardsdk_dp_10"
            android:text="TRAN TUAN ANH" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvContent"
        style="@style/LifeCardSDK_HeaderText_sp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lifecardsdk_dp_8"
        android:gravity="center"
        />
</LinearLayout>
