<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/lifecardsdk_dp_8"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="@dimen/lifecardsdk_dp_16"
        android:paddingRight="@dimen/lifecardsdk_dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGroupName"
            style="@style/LifeCardSDK_HeaderTextBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true" />


        <com.lpb.lifecardsdk.widget.viewpagerindicator.CirclePageIndicator
            android:id="@+id/cpiGroupCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:padding="@dimen/_1_sdp"
            app:fillColor="@color/lifecardsdk_orange"
            app:pageColor="@color/lifecardsdk_white"
            app:snap="false"
            app:strokeColor="@color/lifecardsdk_orange" />

    </LinearLayout>


    <com.lpb.lifecardsdk.widget.CustomWrapViewPager
        android:id="@+id/vpGroupCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>