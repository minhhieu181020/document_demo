<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/lifecardsmerchant_bg_dialog"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="@dimen/lifecardsdk_dp_8"
            android:paddingBottom="@dimen/lifecardsdk_dp_8"
            android:layout_centerVertical="true"
            android:id="@+id/tvTitle"
            android:textSize="@dimen/lifecardsdk_sp_20"
            style="@style/LifeCardSDK_HeaderTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/lifecardsdk_dp_36"
            android:layout_height="@dimen/lifecardsdk_dp_36"
            android:id="@+id/imgClose"
            style="@style/LifeCardSDK_IconToolbar"
            android:src="@drawable/lifecardsdk__ic_close_big"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/lifecardmerchant_border_vertical_gray" />
    <TextView
        android:layout_marginTop="@dimen/lifecardsdk_dp_24"
        android:paddingLeft="@dimen/lifecardsdk_dp_12"
        android:paddingRight="@dimen/lifecardsdk_dp_12"
        style="@style/LifeCardSDK_HeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lifecardsdk_dp_24"
        android:id="@+id/tvDescription"
        android:gravity="center" />

    <include layout="@layout/lifecardmerchant_border_vertical_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvClose"
            android:textSize="@dimen/lifecardsdk_sp_16"
            android:textColor="@color/lifecardsdk_black_effective"
            style="@style/LifeCardSDK_SquareMenuItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/lifecardsdk_dp_12" />

        <include layout="@layout/lifecardsdk_border_horizontal_gray" />

        <TextView
            android:id="@+id/tvAllow"
            style="@style/LifeCardSDK_SquareMenuItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/lifecardsdk_dp_12"
            android:textSize="@dimen/lifecardsdk_sp_16"
            android:textColor="@color/lifecardsdk_orange" />
    </LinearLayout>
</LinearLayout>
