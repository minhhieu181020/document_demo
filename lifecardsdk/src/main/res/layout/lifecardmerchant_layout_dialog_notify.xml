<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lifecardsmerchant_bg_dialog"
    android:orientation="vertical">


    <TextView
        android:text="Thông báo"
        android:id="@+id/tvTitle"
        android:layout_marginTop="@dimen/lifecardsdk_dp_24"
        style="@style/LifeCardSDK_HeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/lifecardsdk_dp_16" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/LifeCardSDK_NormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lifecardsdk_dp_16"
        android:layout_marginBottom="@dimen/lifecardsdk_dp_24"
        android:gravity="center"
        android:paddingLeft="@dimen/lifecardsdk_dp_12"
        android:paddingRight="@dimen/lifecardsdk_dp_12" />

    <include layout="@layout/lifecardmerchant_border_vertical_gray" />

    <TextView
        android:id="@+id/tvClose"
        style="@style/LifeCardSDK_SquareMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/lifecardsdk_dp_12"
        android:textColor="@color/lifecardsdk_black_effective"
        android:textSize="@dimen/lifecardsdk_dp_16" />
</LinearLayout>
