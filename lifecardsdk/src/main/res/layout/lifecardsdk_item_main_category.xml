<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flContent"
    android:layout_width="@dimen/lifecardsdk_dp_85"
    android:layout_height="@dimen/lifecardsdk_dp_85"
    android:orientation="vertical">

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/lifecardsdk_bg_main_category" />

    <LinearLayout
        android:paddingBottom="@dimen/lifecardsdk_dp_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/lifecardsdk_dp_40"
            android:layout_height="@dimen/lifecardsdk_dp_40"
            />

        <TextView
            android:singleLine="true"
            android:id="@+id/tvName"
            style="@style/LifeCardSDK_NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
