<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LifeCardSDK_SquareMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lifecardsdk_bg_round_white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/lifecardsdk_dp_5"
       android:layout_marginLeft="@dimen/lifecardsdk_dp_3"
        android:layout_marginRight="@dimen/lifecardsdk_dp_3"
        android:paddingTop="@dimen/lifecardsdk_dp_10"
        android:paddingBottom="@dimen/lifecardsdk_dp_10"
        android:elevation="@dimen/lifecardsdk_dp_3"
        android:layout_marginBottom="@dimen/lifecardsdk_dp_5">

        <TextView
            android:id="@+id/tvTimeHistoryServiceCase1Row2"
            android:layout_width="@dimen/lifecardsdk_dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/lifecardsdk_dp_16"
            tools:text="01/02/019" />

        <TextView
            android:id="@+id/tvCreditLimitServiceCase1Row2"
            android:layout_width="@dimen/lifecardsdk_dp_0"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/lifecardsdk_dp_20"
            android:layout_weight="4"
            android:textSize="@dimen/lifecardsdk_dp_16"
            android:drawableRight="@drawable/lifecardsdk_ic_keyboard_arrow_right_black_24dp"
            tools:text="500.000 VNĐ" />
    </LinearLayout>


</LinearLayout>
