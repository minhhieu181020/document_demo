<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/lifecardsdk_dp_8"
    android:orientation="vertical">

    <View style="@style/LifeCardSDK_ViewLine_Gray" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/lifecardsdk_dp_8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginStart="-3dp"
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/lifecardsdk_dp_48"
            android:layout_height="@dimen/lifecardsdk_dp_48"
            android:src="@drawable/lifecardsdk_list_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lifecardsdk_dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="@dimen/lifecardsdk_dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/LifeCardSDK_NormalTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/lifecardsdk_dp_16"
                    android:layout_weight="1"
                    android:text="Nguyễn Văn A" />

                <TextView
                    android:gravity="end"
                    android:paddingStart="@dimen/lifecardsdk_dp_32"
                    android:id="@+id/tvDelete"
                    style="@style/LifeCardSDK_NormalTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:textColor="@color/lifecardsdk_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    style="@style/LifeCardSDK_NormalText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/lifecardsdk_dp_16"
                    android:layout_weight="1"
                    android:text="0329144446" />

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/LifeCardSDK_NormalText_14_Gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="12/12/2019 -12:12" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>