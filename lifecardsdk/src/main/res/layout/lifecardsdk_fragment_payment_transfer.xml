<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lifecardsdk_screen_background"
    android:scrollbars="none">

    <LinearLayout
        style="@style/LifeCardSDK_PaddingHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lifecardsdk_screen_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGuide"
            android:textSize="@dimen/lifecardsdk_sp_16"
            style="@style/LifeCardSDK_NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/lifecardsdk_dp_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lifecardsdk_dp_12"
            android:layout_marginBottom="@dimen/lifecardsdk_dp_12"
            android:background="@drawable/lifecardsdk_bg_round_white3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContent"
                style="@style/LifeCardSDK_NormalText"
                android:layout_width="0dp"
                android:textSize="@dimen/lifecardsdk_sp_16"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/lifecardsdk_dp_8"
                android:paddingRight="@dimen/lifecardsdk_dp_8" />

            <LinearLayout
                android:id="@+id/llCopy"
                style="@style/LifeCardSDK_SquareMenuItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/lifecardsdk_bg_round_orange"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/lifecardsdk_dp_8">

                <ImageView
                    android:layout_width="@dimen/lifecardsdk_dp_16"
                    android:layout_height="@dimen/lifecardsdk_dp_16"
                    android:src="@drawable/lifecardsdk_ic_content_copy_white_24dp" />

                <TextView
                    style="@style/LifeCardSDK_SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lifecardsdk_dp_4"
                    android:text="@string/lifecardsdk_payment_tranfer_copy"
                    android:textColor="@color/lifecardsdk_white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:textSize="@dimen/lifecardsdk_sp_16"
            android:id="@+id/tvNote"
            style="@style/LifeCardSDK_NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/lifecardsdk_dp_8" />
    </LinearLayout>
</ScrollView>