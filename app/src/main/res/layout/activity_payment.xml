<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/lifecardsdk_dp_32"
    tools:context=".LCPaymentActivity">
    <TextView
        android:visibility="gone"
        android:id="@+id/tvOrdersID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Day la giao dien thanh toan cua APP\n
Ma don hang: "
        android:textColor="@color/lifecardsdk_red"
        android:textSize="@dimen/lifecardsdk_sp_24" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnFail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thất bại" />

        <Button
            android:id="@+id/btnSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toan thanh cong" />
        <Button
            android:onClick="backtoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to home" />
    </LinearLayout>
    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>