<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <item name="colorAccent">@color/app_colorPrimary</item>
    </style>
    <style name="ProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">50</item>

        <item name="progress_unreached_color">@color/lifecardsdk_transparent</item>
        <item name="progress_reached_color">@color/lifecardsdk_white</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/lifecardsdk_white</item>

        <item name="progress_reached_bar_height">2.5dp</item>
        <item name="progress_unreached_bar_height">1.5dp</item>
    </style>

    <style name="Button_Big" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/lifecardsdk_sp_13</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">@dimen/lifecardsdk_dp_16</item>
        <item name="android:paddingRight">@dimen/lifecardsdk_dp_16</item>
        <item name="android:paddingTop">@dimen/lifecardsdk_dp_10</item>
        <item name="android:paddingBottom">@dimen/lifecardsdk_dp_10</item>
    </style>
</resources>
